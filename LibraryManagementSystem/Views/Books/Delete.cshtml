@model Book

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Author
        </dd>
        <dt class="col-sm-2">
            ISBN
        </dt>
        <dd class="col-sm-10">
            @Model.ISBN
        </dd>
        <dt class="col-sm-2">
            Publication Year
        </dt>
        <dd class="col-sm-10">
            @Model.PublicationYear
        </dd>
        <dt class="col-sm-2">
            Available Copies
        </dt>
        <dd class="col-sm-10">
            @Model.AvailableCopies
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
